# Recipe Genie Discord Bot - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Your Discord bot token (get from https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_bot_token_here

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

# Command prefix for bot commands
COMMAND_PREFIX=!

# Maximum length for user input
MAX_INPUT_LENGTH=500

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# LLM Provider: "local" for LMStudio or "openrouter" for OpenRouter API
LLM_PROVIDER=local

# For Local LLM (LMStudio)
LLM_ENDPOINT=http://localhost:1234/v1/chat/completions
LLM_MODEL=your_model_name_here
LLM_API_KEY=your_api_key_here
LLM_TIMEOUT=30
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7

# For OpenRouter API
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_ENDPOINT=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=anthropic/claude-3-haiku
OPENROUTER_TIMEOUT=30
OPENROUTER_MAX_TOKENS=500
OPENROUTER_TEMPERATURE=0.7

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL
# For SQLite (default, file-based):
DATABASE_URL=sqlite:///bot_data.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Database connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# CACHE CONFIGURATION (OPTIONAL)
# =============================================================================

# Redis URL for enhanced caching (optional)
# REDIS_URL=redis://localhost:6379

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limits per minute
RATE_LIMIT_COMMANDS_PER_MINUTE=10
RATE_LIMIT_MESSAGES_PER_MINUTE=30
RATE_LIMIT_BURST_LIMIT=5

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Admin user IDs (comma-separated, no spaces)
# Get your user ID by enabling Developer Mode in Discord and right-clicking your name
ADMIN_USERS=123456789,987654321

# Allowed guild IDs (comma-separated, no spaces, leave empty for all guilds)
# Get guild ID by enabling Developer Mode and right-clicking the server name
ALLOWED_GUILDS=

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum concurrent requests to LLM
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION (OPTIONAL)
# =============================================================================

# Log file path (optional, will use console only if not set)
# LOG_FILE=logs/bot.log

# =============================================================================
# DEVELOPMENT SETTINGS (OPTIONAL)
# =============================================================================

# Enable debug mode (more verbose logging)
# DEBUG=true

# Enable development features
# DEV_MODE=false