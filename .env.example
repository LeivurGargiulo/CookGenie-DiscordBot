# Recipe Genie Bot Configuration
# Copy this file to .env and fill in your actual values

# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
MAX_INPUT_LENGTH=500
LOG_LEVEL=INFO

# LLM Provider Selection
# Set to "local" for local LLM (LMStudio) or "openrouter" for OpenRouter
LLM_PROVIDER=openrouter

# Local LLM Configuration (LMStudio compatible)
LLM_ENDPOINT=http://localhost:1234/v1/chat/completions
LLM_API_KEY=  # Leave empty if not required
LLM_MODEL=your_model_name_here
LLM_TIMEOUT=90
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.5

# OpenRouter Configuration
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_ENDPOINT=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free
OPENROUTER_TIMEOUT=90
OPENROUTER_MAX_TOKENS=1000
OPENROUTER_TEMPERATURE=0.5